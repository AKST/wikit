                       attoparsec==0.11.*,
                       network==2.4.*,
                       HTTP==4000.2.*,
                       old-locale==1.0.*,
                       mtl ==2.2.*,
                       time==1.4.*,
                       websockets==0.9.2.2,
                       aeson==0.7.*,
                       hslogger==1.2.*,
                       bytestring==0.10.*,
                       text >=1.1 && <1.2
