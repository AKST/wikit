  default-language:    Haskell2010

Test-Suite wikit-tests
  type:                exitcode-stdio-1.0
  main-is:             Main.hs 
  hs-source-dirs:      socket-server/tests, socket-server/src     
  build-depends:       base >=4.7 && <4.8, HUnit, 
                       unordered-containers==0.2.4.*,
                       attoparsec==0.11.*,
                       network==2.4.*,
                       HTTP==4000.2.*,
